<%- include(components.header, { title: title, user: user }) %>

<main class="h-screen m-auto">
  <div class="flex h-screen">
    <!-- Sidebar -->
    <div class="w-60 h-full flex-shrink-0">
      <%- include(components.template) %>
    </div>

    <!-- Main Content -->
    <div class="flex-1 overflow-y-auto pt-16 no-scrollbar">
      <% const hasDisabledTypes = modrinthSettings?.disabledProjectTypes?.length > 0;
      const hasBlockedProjects = modrinthSettings?.blockedProjects?.length > 0;
      const shouldShowWarning = modrinthSettings?.modrinthInstallationWarning && (hasDisabledTypes || hasBlockedProjects); %>

      <!-- Admin Warning Banner -->
      <% if (shouldShowWarning) { %>
      <div class="bg-amber-500/10 border-b border-amber-500/20 px-6 py-3">
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-amber-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
          </svg>
          <div class="flex-1">
            <h3 class="font-semibold text-amber-400 text-sm mb-1"><%= modrinthSettings.warningTitle %></h3>
            <p class="text-amber-200 text-xs mb-2"><%= modrinthSettings.warningMessage %></p>
            <div class="flex flex-wrap gap-2 text-xs">
              <% if (hasDisabledTypes) { %>
              <span class="text-amber-300">Disabled: <%= modrinthSettings.disabledProjectTypes.join(', ') %></span>
              <% } %>
              <% if (hasBlockedProjects) { %>
              <span class="text-amber-300"><%= modrinthSettings.blockedProjects.length %> blocked</span>
              <% } %>
            </div>
          </div>
        </div>
      </div>
      <% } %>

      <!-- Search Section -->
      <div class="bg-neutral-900 border-b border-neutral-700 px-6 py-4">
        <form method="GET" action="/modrinth" class="space-y-3">
          <!-- Search Row -->
          <div class="flex gap-3">
            <div class="flex-1 relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="w-4 h-4 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </div>
              <input type="text" name="q" value="<%= query %>" placeholder="Search projects..." class="w-full pl-10 pr-4 py-2.5 bg-neutral-800 border border-neutral-600 rounded-lg text-white text-sm placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all">
            </div>

            <select name="type" class="px-4 py-2.5 bg-neutral-800 border border-neutral-600 rounded-lg text-white text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent min-w-[130px]">
              <option value="all" <%= type === 'all' ? 'selected' : '' %>>All Types</option>
              <% const typeOptions = [
                { value: 'mod', label: 'Mods' },
                { value: 'modpack', label: 'Modpacks' },
                { value: 'resourcepack', label: 'Resource Packs' },
                { value: 'shader', label: 'Shaders' },
                { value: 'plugin', label: 'Plugins' },
                { value: 'datapack', label: 'Data Packs' }
              ];
              typeOptions.forEach(option => {
                const isDisabled = hasDisabledTypes && modrinthSettings.disabledProjectTypes.includes(option.value);
              %>
              <option value="<%= option.value %>" <%= type === option.value ? 'selected' : '' %> <%= isDisabled ? 'disabled' : '' %>>
                <%= option.label %><%= isDisabled ? ' (Disabled)' : '' %>
              </option>
              <% }); %>
            </select>

            <select id="sortFilter" class="px-4 py-2.5 bg-neutral-800 border border-neutral-600 rounded-lg text-white text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent min-w-[130px]">
              <option value="relevance">Relevance</option>
              <option value="downloads">Downloads</option>
              <option value="updated">Updated</option>
              <option value="newest">Newest</option>
            </select>

            <button type="submit" class="px-5 py-2.5 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg text-sm font-medium transition-colors">
              Search
            </button>
          </div>

          <!-- Quick Filters -->
          <div class="flex flex-wrap gap-2">
            <% const quickFilters = ['Technology', 'Adventure', 'Optimization', 'Decoration', 'Magic', 'Food'];
            quickFilters.forEach(filter => { %>
            <button type="button" class="quick-filter px-3 py-1 text-xs bg-neutral-700 hover:bg-emerald-600 text-neutral-300 hover:text-white rounded-full transition-colors" data-category="<%= filter.toLowerCase() %>">
              <%= filter %>
            </button>
            <% }); %>
          </div>
        </form>
      </div>

      <!-- Results Section -->
      <div class="px-6 py-5">
        <% if (results?.hits?.length > 0) { %>

        <!-- Header -->
        <div class="flex items-center justify-between mb-5">
          <div>
            <% if (query) { %>
            <h2 class="text-lg font-semibold text-white">Results for "<span class="text-emerald-400"><%= query %></span>"</h2>
            <% } else { %>
            <h2 class="text-lg font-semibold text-white">Popular Projects</h2>
            <% } %>
            <p class="text-neutral-400 text-xs mt-0.5">
              <%= results.hits.length %> of <%= results.total_hits.toLocaleString() %>
              <% if (shouldShowWarning) { %><span class="text-amber-400">(filtered)</span><% } %>
            </p>
          </div>

          <!-- Actions -->
          <div class="flex items-center gap-3">
            <button onclick="openProgressModal()" class="flex items-center gap-2 px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg text-sm font-medium transition-all">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
              </svg>
              Status
            </button>

            <!-- View Toggle -->
            <div class="flex bg-neutral-800 rounded-lg p-0.5">
              <button id="gridView" class="p-2 rounded bg-emerald-600 text-white">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM11 13a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
                </svg>
              </button>
              <button id="listView" class="p-2 rounded text-neutral-400 hover:text-white">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Results Grid -->
        <div id="resultsContainer" class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
          <% results.hits.forEach(project => {
            const isProjectTypeDisabled = hasDisabledTypes && modrinthSettings.disabledProjectTypes.includes(project.project_type);
            const isProjectBlocked = hasBlockedProjects && modrinthSettings.blockedProjects.includes(project.project_id);
            const isDisabled = isProjectTypeDisabled || isProjectBlocked;
          %>

          <a href="/modrinth/project/<%= project.project_id %>" class="project-card group block bg-neutral-800 rounded-lg border border-neutral-700 hover:border-emerald-500 transition-all overflow-hidden <%= isDisabled ? 'opacity-60' : '' %>">

            <!-- Image -->
            <div class="aspect-square bg-neutral-700 relative overflow-hidden">
              <% if (project.icon_url) { %>
              <img src="<%= project.icon_url %>" alt="<%= project.title %>" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" loading="lazy">
              <% } else { %>
              <div class="w-full h-full flex items-center justify-center">
                <svg class="w-12 h-12 text-neutral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
              </div>
              <% } %>

              <!-- Badges -->
              <div class="absolute top-2 right-2">
                <span class="px-2 py-0.5 text-xs font-medium bg-emerald-600 text-white rounded">
                  <%= project.project_type %>
                </span>
              </div>
              <% if (isDisabled) { %>
              <div class="absolute top-2 left-2">
                <span class="px-2 py-0.5 text-xs font-medium bg-red-600 text-white rounded" title="<%= isProjectTypeDisabled ? 'Type disabled' : 'Blocked' %>">
                  <%= isProjectTypeDisabled ? 'Disabled' : 'Blocked' %>
                </span>
              </div>
              <% } %>
            </div>

            <!-- Info -->
            <div class="p-3">
              <h3 class="font-semibold text-white text-sm group-hover:text-emerald-400 transition-colors mb-1 truncate">
                <%= project.title %>
              </h3>
              <p class="text-xs text-neutral-400 mb-2 line-clamp-2">
                <%= project.description %>
              </p>

              <!-- Stats -->
              <div class="flex items-center justify-between text-xs text-neutral-500 mb-2">
                <div class="flex items-center gap-2">
                  <span class="flex items-center gap-1">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"></path>
                    </svg>
                    <%= (project.downloads || 0).toLocaleString() %>
                  </span>
                  <span class="flex items-center gap-1">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
                    </svg>
                    <%= (project.follows || 0).toLocaleString() %>
                  </span>
                </div>
                <span><%= new Date(project.date_modified).toLocaleDateString() %></span>
              </div>

              <!-- Categories -->
              <% if (project.categories?.length > 0) { %>
              <div class="flex flex-wrap gap-2">
                <% project.categories.slice(0, 3).forEach(cat => { %>
                <span class="px-1.5 py-0.5 text-xs bg-neutral-700 text-neutral-300 rounded">
                  <%= cat %>
                </span>
                <% }); %>
                <% if (project.categories.length > 3) { %>
                <span class="px-1.5 py-0.5 text-xs bg-neutral-700 text-neutral-300 rounded">
                  +<%= project.categories.length - 3 %>
                </span>
                <% } %>
              </div>
              <% } %>
            </div>
          </a>
          <% }); %>
        </div>

        <!-- Pagination -->
        <% if (totalPages > 1) { %>
        <div class="flex justify-center items-center gap-2 mt-6">
          <% if (page > 1) { %>
          <a href="/modrinth?<%= query ? `q=${encodeURIComponent(query)}&type=${type}&` : '' %>page=<%= page - 1 %>" class="px-3 py-1.5 text-sm bg-neutral-800 text-white border border-neutral-600 rounded hover:bg-neutral-700 transition-colors">
            Prev
          </a>
          <% } %>

          <% const startPage = Math.max(1, page - 2);
          const endPage = Math.min(totalPages, page + 2);
          for (let i = startPage; i <= endPage; i++) { %>
          <% if (i === page) { %>
          <span class="px-3 py-1.5 text-sm bg-emerald-600 text-white rounded font-medium">
            <%= i %>
          </span>
          <% } else { %>
          <a href="/modrinth?<%= query ? `q=${encodeURIComponent(query)}&type=${type}&` : '' %>page=<%= i %>" class="px-3 py-1.5 text-sm bg-neutral-800 text-white border border-neutral-600 rounded hover:bg-neutral-700 transition-colors">
            <%= i %>
          </a>
          <% } %>
          <% } %>

          <% if (page < totalPages) { %>
          <a href="/modrinth?<%= query ? `q=${encodeURIComponent(query)}&type=${type}&` : '' %>page=<%= page + 1 %>" class="px-3 py-1.5 text-sm bg-neutral-800 text-white border border-neutral-600 rounded hover:bg-neutral-700 transition-colors">
            Next
          </a>
          <% } %>
        </div>
        <% } %>

        <% } else if (query) { %>

        <!-- No Results -->
        <div class="text-center py-12">
          <div class="w-16 h-16 mx-auto mb-4 bg-neutral-800 rounded-full flex items-center justify-center">
            <svg class="w-8 h-8 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">No projects found</h3>
          <p class="text-neutral-400 text-sm mb-4">
            <% if (shouldShowWarning) { %>
            Some content may be filtered by admin.
            <% } else { %>
            Try different search terms.
            <% } %>
          </p>
          <button onclick="document.querySelector('input[name=q]').value=''; document.querySelector('form').submit();" class="px-5 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg text-sm transition-colors">
            Browse All
          </button>
        </div>
        <% } %>

        <!-- Credits Footer -->
        <div class="mt-12 pt-6 border-t border-neutral-800">
          <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
            <!-- Left: Credits -->
            <div class="flex items-center gap-2 text-xs text-neutral-500">
              <span>Modrinth store by</span>
              <a href="https://github.com/g-flame-oss" target="_blank" class="text-emerald-400 hover:text-emerald-300 transition-colors font-medium">
                g-flame
              </a>
              <span class="text-neutral-700">•</span>
              <span>Panel by</span>
              <a href="https://github.com/AirlinkLabs" target="_blank" class="text-emerald-400 hover:text-emerald-300 transition-colors font-medium">
                AirlinkLabs
              </a>
            </div>

            <!-- Right: Links -->
            <div class="flex items-center gap-3">
              <a href="https://github.com/g-flame-oss/airlink-addons" target="_blank" class="flex items-center gap-1.5 text-xs text-neutral-400 hover:text-emerald-400 transition-colors group">
                <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path>
                </svg>
                <span class="group-hover:underline">GitHub</span>
              </a>
              <span class="text-neutral-700">•</span>
              <a href="https://github.com/g-flame-oss/airlink-addons/blob/modrinth-addon/LICENSE" target="_blank" class="text-xs text-neutral-400 hover:text-emerald-400 transition-colors hover:underline">
                License
              </a>
              <span class="text-neutral-700">•</span>
              <a href="https://discord.gg/TQzUeg2wJx" target="_blank" class="flex items-center gap-1.5 text-xs text-neutral-400 hover:text-blue-400 transition-colors group">
                <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"></path>
                </svg>
                <span class="group-hover:underline">Discord</span>
              </a>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</main>

<!-- Include Progress Modal -->
<%- include('progress') %>

<!-- Toast -->
<div id="toast" class="fixed top-4 right-4 z-50 hidden">
  <div class="bg-neutral-800 border border-neutral-600 rounded-lg shadow-lg p-3 min-w-[280px]">
    <div class="flex items-start gap-2">
      <div id="toastIcon" class="flex-shrink-0"></div>
      <div class="flex-1">
        <div id="toastTitle" class="font-medium text-white text-sm"></div>
        <div id="toastMessage" class="text-neutral-400 text-xs mt-0.5"></div>
      </div>
      <button onclick="hideToast()" class="text-neutral-400 hover:text-white">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
        </svg>
      </button>
    </div>
  </div>
</div>

<style>
  .no-scrollbar {
    overflow: auto;
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }

  body,
  html {
    overflow-x: hidden;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    setupQuickFilters();
    setupViewToggle();
    setupFormValidation();
  });

  function showToast(message, type = 'info', duration = 4000) {
    const toast = document.getElementById('toast');
    const icon = document.getElementById('toastIcon');
    const title = document.getElementById('toastTitle');
    const messageEl = document.getElementById('toastMessage');

    const config = {
      success: {
        icon: '✓',
        title: 'Success',
        color: 'emerald'
      },
      error: {
        icon: '✗',
        title: 'Error',
        color: 'red'
      },
      warning: {
        icon: '⚠',
        title: 'Warning',
        color: 'amber'
      },
      info: {
        icon: 'ℹ',
        title: 'Info',
        color: 'blue'
      }
    };

    const {
      icon: iconText,
      title: titleText,
      color
    } = config[type] || config.info;

    icon.innerHTML = `<div class="w-5 h-5 bg-${color}-600 rounded-full flex items-center justify-center text-white text-sm font-bold">${iconText}</div>`;
    title.textContent = titleText;
    messageEl.textContent = message;

    toast.classList.remove('hidden');
    if (duration > 0) setTimeout(() => hideToast(), duration);
  }

  function hideToast() {
    document.getElementById('toast').classList.add('hidden');
  }

  function setupQuickFilters() {
    document.querySelectorAll('.quick-filter').forEach(btn => {
      btn.addEventListener('click', function() {
        const searchInput = document.querySelector('input[name="q"]');
        if (searchInput) {
          searchInput.value = this.dataset.category;
          this.closest('form').submit();
        }
      });
    });
  }

  function setupViewToggle() {
    const gridBtn = document.getElementById('gridView');
    const listBtn = document.getElementById('listView');
    const container = document.getElementById('resultsContainer');

    if (!gridBtn || !listBtn || !container) return;

    listBtn.addEventListener('click', function() {
      container.className = 'space-y-3';
      container.querySelectorAll('.project-card').forEach(card => {
        card.classList.remove('block');
        card.classList.add('flex', 'items-start', 'gap-4', 'p-4');

        const imgContainer = card.querySelector('.aspect-square');
        if (imgContainer) {
          imgContainer.classList.remove('aspect-square');
          imgContainer.classList.add('w-20', 'h-20', 'flex-shrink-0', 'rounded-lg', 'overflow-hidden');
          imgContainer.parentElement.classList.remove('p-3');
        }

        const info = card.querySelector('div:last-child');
        if (info && info.classList.contains('p-3')) {
          info.classList.remove('p-3');
          info.classList.add('flex-1', 'min-w-0');
        }

        const stats = card.querySelector('.flex.items-center.justify-between');
        if (stats) {
          stats.classList.remove('justify-between');
          stats.classList.add('justify-start', 'gap-6');
        }
      });

      listBtn.className = 'p-2 rounded bg-emerald-600 text-white';
      gridBtn.className = 'p-2 rounded text-neutral-400 hover:text-white';
    });

    gridBtn.addEventListener('click', function() {
      container.className = 'grid gap-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4';
      container.querySelectorAll('.project-card').forEach(card => {
        card.classList.add('block');
        card.classList.remove('flex', 'items-center', 'gap-4');

        const imgContainer = card.querySelector('.w-24');
        if (imgContainer) {
          imgContainer.classList.add('aspect-square');
          imgContainer.classList.remove('w-24', 'h-24', 'flex-shrink-0');
        }

        const info = card.querySelector('.p-3');
        if (info) {
          info.classList.remove('flex-1');
        }

        const stats = card.querySelector('.flex.items-center.justify-start');
        if (stats) {
          stats.classList.add('justify-between');
          stats.classList.remove('justify-start', 'gap-4');
        }
      });

      gridBtn.className = 'p-2 rounded bg-emerald-600 text-white';
      listBtn.className = 'p-2 rounded text-neutral-400 hover:text-white';
    });
  }

  function setupFormValidation() {
    const form = document.querySelector('form[action="/modrinth"]');
    const typeSelect = document.querySelector('select[name="type"]');

    if (!form || !typeSelect) return;

    const modrinthSettings = <%- JSON.stringify(modrinthSettings || {}) %>;

    form.addEventListener('submit', function(e) {
      const selectedType = typeSelect.value;
      if (selectedType !== 'all' && modrinthSettings?.disabledProjectTypes?.includes(selectedType)) {
        e.preventDefault();
        showToast(`${selectedType} projects are disabled by admin`, 'error', 5000);
        typeSelect.value = 'all';
        return false;
      }
    });
  }
</script>

